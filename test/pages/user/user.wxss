/* pages/user/user.wxss */
page{
  background: #f3f3f3;
}
.header{
  display: flex;
  padding: 0 25rpx;
  background:#fff;
  padding-bottom: 90rpx;
}
.image-box{
  width: 84rpx;
  height: 84rpx;
  margin-right: 25rpx;
}
.image-box .image{
  width: 100%;
  height:100%;
  border-radius: 50%;
  background: red;
  display: block;
}
.header .content{
  color: #111;
  padding-top: 20rpx;
}
.header .name{
  width: 2rem;
  font-size: 38rpx;
  line-height: 1;
}
.header .info{
  display: flex;
}
.header .info .i{
  color: #fff;
  font-size: 12rpx;
  padding: 0 20rpx;
  line-height: 18rpx;
  background: #fbb;
  border-radius: 9rpx;
  margin: 5rpx;
}