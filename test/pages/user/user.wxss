/* pages/user/user.wxss */
page{
  background: #f3f3f3;
}
.header{
  display: flex;
  padding: 0 25rpx;
  background:#fff;
  padding-bottom: 90rpx;
}
.image-box{
  width: 84rpx;
  height: 84rpx;
  margin-right: 25rpx;
}
.image-box .image{
  width: 100%;
  height:100%;
  border-radius: 50%;
  background: red;
  display: block;
}
.header .content{
  color: #111;
  padding-top: 20rpx;
}
.header .name{
  width: 2rem;
  font-size: 38rpx;
  line-height: 1;
}
.header .info{
  display: flex;
}
.header .info .i{
  color: #fff;
  font-size: 12rpx;
  padding: 0 20rpx;
  line-height: 18rpx;
  background: #fbb;
  border-radius: 9rpx;
  margin: 5rpx;
}
.list{
  background: #fff;
  padding: 0 20rpx;
  font-size: 30rpx;
}
.list .title{
  color: #111;
  display: flex;
  justify-content: space-between;
}
.list .title .more{
  color: #666;
  font-size: 26rpx;
}
.list1{
  color: #666;
}
.list1 .content{
  display: flex;
  padding: 20rpx 0;
  justify-content: space-around;
}
.list1 .item{
  flex: 1;
  
  position: relative;
}
.list1 .icon{
  color: #c55;
  padding: 5rpx 10rpx;
  font-size: 20rpx;
  line-height: 1;
  border-radius:50%;
  border: 1px solid #c55;
  position: absolute;
  top: -10rpx;
  right: 25rpx;
}
.list1 .img{
  width: 50rpx;
  height:50rpx;
  margin: 0 auto;
  display: block;
}
.list1 .name{
  font-size: 20rpx;
  line-height: 1.5;
  text-align:center;
}