<swiper interval="1000" duration="500" class="swiper1" display-multiple-items="6">
  <block wx:for="{{text}}" wx:key="index">
    <swiper-item class="swiper-item1">
      <navigator url=""  class="text">{{item}}</navigator>
    </swiper-item>
  </block>
</swiper>
<swiper indicator-dots="true" autoplay="true" interval="2000" duration="500" circular="true" indicator-color="rgba(255, 255, 255, .5)" indicator-active-color="#fff" class="swiper2" next-margin='0rpx'>
  <block wx:for="{{imgUrls}}" wx:key="index">
    <swiper-item class='back center'>
      <image src="{{item}}" width="750" height="200" class='back'/>
    </swiper-item>
  </block>
</swiper>
<swiper autoplay="" duration="" class="spell">
  <block>
    <swiper-item class="spell-box">
      <view class="spell-left">
        <image></image>
        <text></text>
      </view>
      <view class="spell-right">
        <view class="spell-r-t"></view>
        <view class="spell-r-b"></view>
      </view>
      
    </swiper-item>
  </block>
</swiper>
<view>
  <navigator url=''></navigator>
</view>