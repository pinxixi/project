<view class="bg">
  <image src="../homeImg/zhang-kaiyv-661828-unsplash.jpg" class="bgimg"></image>
</view>
<!-- 轮播图1111 -->
<swiper 
  indicator-dots="true" 
  class="swiper" 
  autoplay="true"
  interval="3000"
  duration="500"
  circular="true"
 >
  <swiper-item wx:for="{{imgUrl}}" wx:key="{{index}}">
    <image src="{{item}}" class="swiperImg"></image>
  </swiper-item>
</swiper>
<!-- 轮播图左右灰色竖条 -->
<view class="suspension">
  <view class="suspension-this suspension-l"></view>
  <view class="suspension-this suspension-r"></view>
</view>
