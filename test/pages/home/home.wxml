<!--pages/home/home.wxml-->
<!-- tab选项 -->
<swiper interval="1000" duration="500" class="tab" display-multiple-items="6">
  <block wx:for="{{text}}" wx:key="index">
    <swiper-item class="swiper-item1">
    {{item}}
      <!-- <navigator url="{{item.navigator}}"  class="text" hover-class="nav">{{item}}</navigator> -->
    </swiper-item>
  </block>
</swiper>
<!-- 轮播图 -->
<swiper indicator-dots="true" autoplay="true" interval="2000" duration="500" circular="true" indicator-color="rgba(255, 255, 255, .5)" indicator-active-color="#fff" class="slider" next-margin='0rpx'>
  <block wx:for="{{imgUrls}}" wx:key="index">
    <swiper-item class='back center'>
      <image src="{{item}}" width="750" height="200" class='back'/>
    </swiper-item>
  </block>
</swiper>
<!-- 拼团 -->
<view class="spell">
  <view class="title-box">
    <text class="title-b-l">这些人刚刚购买成功，可插队拼单</text>
    <text class="title-b-r">查看更多></text>
  </view>
  <swiper autoplay="auto" duration="500" class="spellPlay" vertical="true" circular="true">
    <block>
      <swiper-item class="autoplay" wx:for="{{text}}">
        <image src="https://images.unsplash.com/photo-1551334787-21e6bd3ab135?w=640" class="img"></image>
        <text class="spellTitle">{{item}}</text>
        <view class="spellTimer">
          <view class="short">还差1人拼成</view>
          <view class="timer">剩余19:52:40.1</view>
        </view>
        <view class="goSpell">
          <text class="goSpelltxt">去拼单</text>
        </view>
      </swiper-item>
    </block>
  </swiper>
</view> 
