/* pages/refund/refund.wxss */
page{
  background: #f2f2f2;
}
.top{
	width: 750rpx;
	height: 130rpx;
  text-align: center;
  line-height: 130rpx;
	background-color: #ffffff;
	box-shadow: -3px 0px 7px 0px 
		rgba(0, 0, 0, 0.06), 
		inset -1px 0px 2px 0px 
		rgba(228, 228, 228, 0.35);
}
.shop{
	width: 702rpx;
	height: 442rpx;
  margin: 0 auto;
	background-color: #ffffff;
	border-radius: 20rpx;
  margin-top: 37rpx;
}
.shop .topText{
  margin-top: 49rpx;
  margin-left: 65rpx;
}
.shop .topText text{
	width: 237rpx;
	height: 28rpx;
	font-family: PingFang-SC-Medium;
	font-size: 26rpx;
	font-weight: normal;
	font-stretch: normal;
	line-height: 30rpx;
	letter-spacing: 0rpx;
	color: #333333;
}
.shop .imgText{
  display: flex;
  margin-left: 19rpx;
  margin-top: 62rpx;
  width: 100%;
}
.shop .imgText image{
	width: 181rpx;
	height: 181rpx;
	background-color: #ffc13c;
	border-radius: 10rpx;
}
.shop .imgText .shopText{
  display: flex;
  flex-direction: column;
	width: 452rpx;
	height: 62rpx;
	font-size: 26rpx;
	line-height: 21rpx;
	letter-spacing: 0rpx;
  margin-left: 20rpx;
	color: #383a3a;
}
.shop .imgText .shopText .description{
  display: flex;
  justify-content: left;
  align-items: center;
  width: 100%;
  line-height: 36rpx;
  font-size: 26rpx;
  margin-bottom: 41rpx;
}
.shop .shopRefund{
  display: flex;
  font-size: 20rpx;
  margin-left: 85rpx;
  margin-top: 42rpx;
  margin-bottom: 15rpx;
  color: #9c9a9a;
}
.shop .shopRefund .refundSuccess{
  margin-right: 270rpx;
}
.shop .line{
  width: 100%;
  height: 2rpx;
  background: #f2f2f2;
  margin-bottom: 5rpx;
}
.shop .lookshop{
  font-size: 26rpx;
  color: #da2015;
  /* padding: 14rpx 21rpx 16rpx 19rpx; */
	width: 144rpx;
	height: 55rpx;
  text-align: center;
  line-height: 55rpx;
	border-radius: 28rpx;
	border: 1rpx solid #dc3025;
  margin-right: 23rpx;
  margin-left: 535rpx;
}
.bottomText{
  display: flex;
  justify-content: center;
  width: 100%;
  margin-top: 86rpx;
}
.bottomText image{
  width: 107rpx;
  height: 64rpx;
}
.bottomText text{
	width: 158rpx;
	height: 30rpx;
	font-size: 30rpx;
	line-height: 42rpx;
	letter-spacing: 0rpx;
	color: #bacdc3;
  margin-top: 35rpx;
}